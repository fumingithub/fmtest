<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <!-- 参考 -->
    <package name="safety" namespace="/safety" extends="ncms-default">
    
        <!-- 机构注册 -->
        <action name="organization" class="net.jqsoft.base.safety.view.OrganizationAction">
            <result name="success"  type="freemarker">/WEB-INF/pages/safety/organization/organization_list.html</result>
            <result name="result"   type="json"><param name="root">organizationList</param></result>
            <result name="_result"  type="freemarker">/WEB-INF/pages/common/_result.html</result>
            <result name="sonList"  type="freemarker">/WEB-INF/pages/safety/organization/organization_sonList.html</result>
            <result name="dialog"   type="freemarker">/WEB-INF/pages/safety/organization/organization_view.html</result>
            <result name="transfer" type="freemarker">/WEB-INF/pages/safety/organization/organization_transfer.html</result>
            <result name="code_select" type="freemarker">/WEB-INF/pages/safety/organization/organization_codeSelect.html</result>
        </action>
        
        <!-- 部门注册 -->
        <action name="department" class="net.jqsoft.base.safety.view.DepartmentAction">
            <result name="success" type="freemarker">/WEB-INF/pages/safety/department/departmentzTree_list.html</result>
            <result name="input" type="freemarker">/WEB-INF/pages/safety/department/department_view.html</result>
            <result name="sonresult" type="freemarker">/WEB-INF/pages/safety/department/department_list.html</result>
            <result name="json"  type="json"><param name="root">arealist</param></result>
            <result name="treeresult" type="json"><param name="root">organizationList</param></result>
        	<result name="importment" type="freemarker">/WEB-INF/pages/safety/department/department_import.html</result>
        	<result name="excel" type="stream">  
			   <param name="contentType">application/vnd.ms-excel,charset=ISO8859-1</param>
			   <!-- 下载文件的名字 -->
			   <param name="contentDisposition">attachment;filename="${fileName}"</param>  
			   <!-- 下载文件的大小 10485760=10M -->
			   <param name="bufferSize">4096</param>
			   <param name="inputName">excelFile</param>  
			</result>
			<result name="standardName"  type="json"><param name="root">standardDeptNameList</param></result>
        </action>
    </package>
</struts>
